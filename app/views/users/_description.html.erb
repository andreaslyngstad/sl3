<div id="description">	
	<% if !@klass.role.blank? %>
	<div class="state_headers"><%= t('activerecord.attributes.user.role' )%></div>
	<div class="state_unit"><%= t ('activerecord.attributes.user.' + @klass.role.downcase) %></div>
	<% end %>

	<% if !@klass.phone.blank? %>
	<div class="state_headers"><%= t('activerecord.attributes.user.phone' )%></div>
	<div class="state_unit"><%= @klass.phone %></div>
	<% end %>
	<% if !@klass.email.blank? %>
	<div class="state_headers"><%= t('activerecord.attributes.user.email' )%></div>
	<div class="state_unit"><%= mail_to "#{ @klass.email}" %></div>
<% end %>
	<div class="state_headers"><%= t('activerecord.attributes.user.hourly_rate' )%></div>
	<div class="state_unit"><%= currency_converter(@klass.try(:hourly_rate).to_s) %> </div>
	<div class="show_user_image">
	<div class="avatar_show_page">
		<%= image(@klass, "image100") %>
		<% if true  %><%# if can?  :manage, @klass %>	
		<%= link_to "Change image", "#", :class => "show_avatar_upload" %> 
		</div>
		<div class="avatar_upload" style="display:none">
			<%= form_for(@klass, :html => { :multipart => true}) do |f| %>
			<%= f.hidden_field :fake%>
				<p id="firm_logo"><%= f.file_field :avatar%></p>  
				<%= f.submit "Upload", :class => "submit"%>  <%= link_to "Cancel", "", :class => "hide_avatar_upload" %>
			<% end %>
		<% else %>
		</div>
		<% end %>
	</div>
</div>