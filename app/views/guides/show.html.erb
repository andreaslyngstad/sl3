<div class="guides">
	<div class="guides_left">
		<ul>
		<% @guidescat.each do |cat| %>
			<li><%= cat.title %>
				<ul>
					<% cat.guides.each do |guide| %>
						<li>
							<%= link_to_unless_current guide.title, guide_path(guide) %>
						</li>
					<% end %>
				</ul>
			</li>
		<% end %>
		</ul>
	</div>
	<div class="guides_right">
		  <%= @guide.content.html_safe %>
	</div>
</div>
 
