<div id="disqus_thread"> </div>
<script type="text/javascript">
    // put the short name you signed up with here
    var disqus_shortname = 'squadlink'; 
    var disqus_developer = <%=  Rails.env == "production" ? '0' : '1'  %>;
    var disqus_title = 'Squadlink <%= @blog.title %>' ;
    var disqus_url = '<%=  request.url.to_s  %>';
    var disqus_identifier =  '<%= request.fullpath.to_s  %>';
    (function() {
      var dsq = document.createElement('script'); 
      dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js?https';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
