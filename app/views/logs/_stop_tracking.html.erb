<div class="log_form red"> 
    <%= form_for @log, :remote => true, :html => {:class => "stop_tracking_form", :id => "log_update_#{log.id.to_s}_form"}, :url => stop_tracking_path(@log) do |n| %>
 		<div class="tracking_container">
   			<%= n.text_area :event, :class => "tracking_log_event log_event_recording", :id => "tracking_log_event_field", :data => {:id => @log.id}%> 
   		<div class="clock_rec">
   			<div class="display">
   				<span class="hr"><%=hours(Time.zone.now - @log.begin_time)%></span>:<span class="min"><%=min(Time.zone.now - @log.begin_time)%></span>:<span class="sec"><%=sec(Time.zone.now - @log.begin_time)%></span>  				
   			</div>
   		</div>
     	<div class="tracking_button">
			<%= n.submit "", :class => "stop"%>
		</div>
		</div>
         <%= render :partial => "logs/tracking_partial", :locals => {:log => @log, :n => n}%>
  	<% end %>
			  
	<div class="open_tracking_select_container">
	    <a class="open_tracking_select" title="Details" data-id="<%= @log.id %>"></a>
	</div>
</div>