<% log = current_firm.logs.new %>
<div class="log_form blue">
	<%= form_for(log, :url => start_tracking_path, :html => {:class => "start_tracking_form", :id => "start_tracking_form"} )  do |n| %>
		<div class="tracking_container">
			   <%= n.text_area :event, :class => "tracking_log_event", :id => "tracking_log_event_field", :AUTOCOMPLETE => "OFF", :autofocus=>"autofocus" %> 
		<div class="clock_start">
			<div class="display">
				<span class="hr">00</span>:<span class="min">00</span>:<span class="sec">00</span>
			</div>
		</div>	    
		<div class="tracking_button">
			<%= n.submit "", :class => "start"%>
		</div>
  		</div>
		<%= render :partial => "logs/tracking_partial", :locals => {:log => log, :n => n}%>
	<% end %>		  
    <div class="open_tracking_select_container">
	 	<a class="open_tracking_select" title="Details" data-id="<%= log.id %>"></a>
	</div>
</div>
	