<div id="left" class="home_content">
<%= render "shared/home_header" %>
  	<div class="html_tab_content" id="tabs-1"> 
  		<div class="timesheet">
  	<%= form_tag "/squadlink_report", :method => :get %>
  	<ul class="report_form">
		<li><%= t'general.range' %> <span class="right"><%= text_field_tag 'from',date_format(time_zone_now.to_date - 1.month),  :class => "range_date"%>  
			<%= text_field_tag 'to',date_format(time_zone_now.to_date), :class => "range_date", :style => "font-size:80%;"  %></span></li>
			
			
		<li><%= t('activerecord.models.user.one').capitalize %>    
			<span class="right">
			<select class="range_select" id="user_id" name="user_id">
				<option value=""><%= t('general.select') %> <%= t('activerecord.models.user.one').capitalize %></option>
				<% @users.each do |user| %>
					<option value="<%= user.id %>"><%= user.name %></option>
					<% end %>
				</select>
			</span>
		</li> 
		<li><%= t('activerecord.models.project.one').capitalize %>     
			<span class="right">
			<select class="range_select" id="project_id" name="project_id">
				<option value=""><%= t('general.select') %> <%= t('activerecord.models.project.one').capitalize %></option>
				<% @projects.each do |project| %>
					<option value="<%= project.id %>"><%= project.name %></option>
					<% end %>
				</select>
			</span>
		</li>  		
		<li><%= t('activerecord.models.customer.one').capitalize %>     
			<span class="right">
			<select class="range_select" id="customer_id" name="customer_id">
				<option value=""><%= t('general.select') %> <%= t('activerecord.models.customer.one').capitalize %></option>
				<% @customers.each do |customer| %>
					<option value="<%= customer.id %>"><%= customer.name %></option>
					<% end %>
				</select>
			</span>
		</li> 
		<li>Format     
			<span class="right">
			<select class="format_select" id='format' name='format'>
	  			<option value='html' selected='selected'><%= (t'general.view_in_brower') %> (HTML)</option>
	  			<option value='csv'><%= (t'general.export_to_csv') %> (CSV)</option>
	  			<option value='xls'><%= (t'general.export_to_excel') %> (XLS)</option>
			</select>
			</span> 	
		</li>	 		
  		<li><%= submit_tag (t'general.generate_report') , :class => 'submit' %></li>

  	</ul>
	</div>
	</div>
 </div>