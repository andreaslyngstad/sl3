<div id="register_container">
 <div id="registration" class="blue">
 	<p>Forgot your password?</p>
    <p>Enter your email and we'll send instructions on how to reset it.</p>
      <span class="flash_notice" style="color: red;"><%= flash[:alert] %></span>
     <span class="flash_notice" style="color: #87E32B;"><%= flash[:notice] %></span>
 </div>
<div class="signup signup_firm">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <div class="signup-form-field"><%= f.label :email %><%= f.email_field :email, :autofocus => true %></div>
  <div class="signup-form-field"><%= f.submit "Send instructions", :class => "submit" %></div>
<% end %>
 </div>
  <div class="instruction_1">
	<p><%= render "links" %></p>
</div>
</div>